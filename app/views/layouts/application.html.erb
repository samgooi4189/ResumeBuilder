<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
    <%= stylesheet_link_tag "application", media: "all",
                                           "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
    <%= render 'layouts/shim' %>
</head>
<body>
    <%= render 'layouts/header' %>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="navbar-inner">
        <div class="container">
          <%= link_to "resume builder", root_path, id: "logo" %>
          <nav>
            <ul class="nav pull-right">
              <li><%= link_to "Experience", '/experiences' %>
              	<ul>
              		<li><%= link_to "Company", '/companies' %>
              			<ul>
              				<li><%= link_to "Position", '/positions' %></li>
              			</ul>
              		</li>
              	</ul>
              </li>
              <li><%= link_to "Education", '/educations' %>
              	<ul>
              		<li><%= link_to "School", '/schools' %></li>
              	</ul>
              </li>
              <li><%= link_to "Recommendation", '/recommendations' %>
              	<ul>
              		<li><%= link_to "People", '/people' %></li>
              	</ul>
              </li>
              <li><%= link_to "Information", '/information' %></li>
              <li><%= link_to "Skillset", '/skillsets' %>
              	<ul>
              		<li><%= link_to "Skills", '/skills' %>
          		</ul>
              </li>
            </ul>
          </nav>
        </div>
      </div>
    </header>
    <div class="container">
      <%= yield %>
      <%= render 'layouts/footer' %>
      <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>
