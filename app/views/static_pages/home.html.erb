<% provide(:title, '')%>
<% if signed_in? %>
  <%= render 'shared/after_login_home' %>
<% else %>
  <div class="center hero-unit">
    <h1>Resume Builder</h1>

    <h2>
      Welcome to Resume Builder, where you could build your resume in a few clicks.
    </h2>

    <%= link_to "Sign up now!", signup_path,
                                class: "btn btn-large btn-primary" %>
  </div>
<% end %>
